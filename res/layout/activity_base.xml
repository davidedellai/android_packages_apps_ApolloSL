<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
<com.andrew.apollo.ui.activities.CustomDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dw_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:tag="Modified Apolo"
    tools:context=".AboutActivity"
    android:layout_weight="0.90" >
  <com.andrew.apollo.widgets.theme.ThemeableFrameLayout
        android:id="@+id/dw_container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />
 

    <ListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation_drawer"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:alpha="0.9"
        android:background="#0C090A" />
    
   


</com.andrew.apollo.ui.activities.CustomDrawerLayout>
 <include layout="@layout/bottom_action_bar"/>
</LinearLayout>